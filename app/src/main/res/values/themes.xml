<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CarMarketplaceApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <!-- Error color. -->
        <item name="colorError">@color/errorColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize other color attributes if needed -->
    </style>

    <style name="Theme.CarMarketplaceApplication" parent="Base.Theme.CarMarketplaceApplication" />
</resources>





