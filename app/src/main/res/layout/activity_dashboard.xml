<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Layout for DashboardActivity, you can customize it as per your needs -->
    <Button
        android:id="@+id/buttonViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/buttonViewProfile"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Add more buttons here and use android:layout_below to position them -->

</RelativeLayout>
